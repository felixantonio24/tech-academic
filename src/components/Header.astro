<style>

.container {
    position: relative; 
    width: 100%;
    height: 95vh; 
    overflow: hidden;
}

/* Variables */
:root {
    --pareceplomo: rgb(49, 46, 46);
    --negro: black;
    --blanco: white;
    --rojo: red;
    --rojoopaco: rgb(155, 18, 18);
}

/* Imagen de fondo */
.header-image {
    width: 100%;
    height: 95vh;
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover; /* Se ajusta sin deformarse */
    filter: brightness(0.7);
}

/* T√≠tulo principal */
.text-header {
    position: absolute;
    z-index: 2;
    top: 30%; 
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%; 
    max-width: 600px;
    text-align: center;
    color: var(--rojoopaco);
    font-weight: bolder;
    font-size: 4.8rem;
    text-transform: uppercase;
    filter: drop-shadow(2px 2px 2px var(--blanco));
}


.container-header-tittle_y_parr {
    position: absolute;
    z-index: 2;
    top: 55%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    width: 90%;
    max-width: 600px;
}


.container-header-tittle_y_parr h2 {
    font-size: 1.5rem;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
    color: var(--blanco);
}


.container-header-tittle_y_parr p {
    font-size: 1rem;
    font-weight: bolder;
    filter: drop-shadow(1px 1px 2px var(--negro));
    color: var(--blanco);
}

button {
    background-color: var(--rojoopaco);
    color: var(--blanco);
    border-radius: 5px;
    height: 3rem;
    padding: 0.5rem 1.5rem;
    cursor: pointer;
    filter: drop-shadow(0px 0px 1px var(--blanco));
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 3rem;
    animation: palpitar 1.5s infinite ease-in-out;
    font-size: 1rem;
    border: none;
}


@keyframes palpitar {
    0%, 100% {
        transform: translateX(-50%) scale(1);
    }
    50% {
        transform: translateX(-50%) scale(1.1);
    }
}

/* üîπ MEDIA QUERIES PARA RESPONSIVE */

/* Tablets */
@media (max-width: 1024px) {
    .text-header {
        font-size: 3.5rem;
    }
    .container-header-tittle_y_parr h2 {
        font-size: 1.3rem;
    }
    .container-header-tittle_y_parr p {
        font-size: 0.9rem;
    }
    button {
        font-size: 0.9rem;
        height: 2.8rem;
    }
}

/* Celulares */
@media (max-width: 768px) {
    .text-header {
        font-size: 2.5rem;
        top: 25%;
    }
    .container-header-tittle_y_parr {
        top: 50%;
        width: 90%;
    }
    .container-header-tittle_y_parr h2 {
        font-size: 1.2rem;
    }
    .container-header-tittle_y_parr p {
        font-size: 0.85rem;
    }
    button {
        font-size: 0.85rem;
        height: 2.5rem;
    }
}

/* Celulares peque√±os */
@media (max-width: 480px) {
    .text-header {
        font-size: 3rem;
        top: 25%;
        width: 50%;
    }
    .container-header-tittle_y_parr {
        top: 50%;
        width: 95%;
    }
    .container-header-tittle_y_parr h2 {
        font-size: 1.6rem;

    }
    .container-header-tittle_y_parr p {
        font-size: 0.9rem;
    }
    button {
        font-size: 0.8rem;
        height: 2.3rem;
    }
}

</style>