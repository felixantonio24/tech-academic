<style>
    #inscripcion {
        padding: 2rem;
        text-align: center; 
    
    
    }
section{
    margin-top: 5%;
    margin-bottom: 2%;
}
:root{
    --blanco:white;
    --negro:black;
    --plomoclaro:#666;
}
    .container-section-cursos {
        display: flex;
        flex-wrap: wrap; 
        gap: 2rem; 
        justify-content: center; 
    }

    .container-section-cursos div {
        background-color: var(--blanco);
        border: 1px solid var(--blanco);
        border-radius: 8px; 
        padding: 1rem; 
        width: 200px; 
        box-shadow: 0 4px 6px var(--negro); 
        transition: transform 0.3s ease; 
        
    }

    .container-section-cursos div:hover {
        transform: translateY(-8px); 
    }

    .container-section-cursos img {
        width: 100%; 
        height: 20vh;
        border-radius: 8px; 
    }

    .container-section-cursos h2, .container-section-cursos h3 {
        font-size: 1.25rem;
        color: #333; 
        margin: 0.5rem 0; 
    }

    .container-section-cursos p {
        font-size: 1rem; 
        color: var(--plomoclaro);
        margin: 0; 

    }

    button{
        background-color: var(--blanco);
        transform: translate(80%);
        cursor: pointer;
        border-radius:5px;
        transition: transform 0.3s ease; 
    }
    button:hover{
        background-color: var(--negro);
        color: var(--blanco);
    }
    
</style>
